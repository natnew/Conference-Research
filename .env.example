# Example environment variables for development
# Copy this file to .env.development and fill in your actual values

# Environment
ENVIRONMENT=development

# API Keys (replace with your actual keys)
OPENAI_API_KEY=your_openai_api_key_here
SERPER_API_KEY=your_serper_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Application Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.csv,.xlsx,.xls
DEBUG_MODE=true

# API Configuration
OPENAI_MODEL=gpt-4o-mini-2024-07-18
OPENAI_MAX_TOKENS=1000
OPENAI_TIMEOUT=30

# Google Serper Configuration
SERPER_TIMEOUT=10
SERPER_MAX_RESULTS=10

# WebDriver Configuration
WEBDRIVER_TIMEOUT=30
WEBDRIVER_HEADLESS=true
CHROME_BINARY_PATH=/usr/bin/chromium

# Retry Configuration
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1.0
API_RETRY_BACKOFF=2.0

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# Redis Configuration (if using caching)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SESSION_SECRET_KEY=your_session_secret_key_here
VALIDATE_SSL_CERTIFICATES=false  # Set to true in production
